<script>
const list=document.getElementById("list");
let data=[];

function grade(s){
  if(s==10) return "S";
  if(s>=8) return "A";
  if(s>=7) return "B";
  if(s>=6) return "C";
  if(s>=5) return "D";
  return "F";
}

form.onsubmit=e=>{
  e.preventDefault();
  let s=+score.value;
  data.push({m:subject.value,d:s,g:grade(s)});
  form.reset();
  render();
}

function render(){
  list.innerHTML="";
  data.forEach((x,i)=>{
    list.innerHTML+=`
      <tr>
        <td>${x.m}</td>
        <td>${x.d}</td>
        <td><span class="badge ${x.g}">${x.g}</span></td>
        <td><button class="delete" onclick="del(${i})">âŒ</button></td>
      </tr>`;
  });
}

function del(i){
  data.splice(i,1);
  render();
}
</script>

